<h1>All Tags</h1>

<ul id='tags'>
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag), class:'tag_name'  %>
      <p>
        Articles:
        <% tag.articles.each do |article| %>
          <%= link_to article.title, article_path(article) %>
        <% end %>
      </p>
    </li><br />
  <% end %>
</ul>

<%= link_to 'Create A New Article', new_article_path, class:'new_article' %>